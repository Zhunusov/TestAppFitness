@using Resources;

<div id="register_modal" class="w3-modal">
    <div class="w3-modal-content w3-card-4 w3-animate-zoom" style="max-width:400px">

        <div class="w3-center">
            <br>
            <span onclick="document.getElementById('register_modal').style.display = 'none'" class="w3-button w3-xlarge w3-transparent w3-display-topright" title="Close Modal">×</span>
            <img src="~/Images/user.png" alt="Avatar" style="width:30%" class="w3-circle w3-margin-top">
        </div>

        @if (Request.IsAuthenticated && Roles.IsUserInRole(User.Identity.Name, "Administrator"))
        {
            <div class="w3-container w3-section">
                <label><b>@Resource.Role</b></label>
                <select id="selected_role_register_by_admin" class="w3-input w3-border w3-margin-bottom">
                    <option value="customer">@Resource.Customer</option>
                    <option value="coach">@Resource.Coach</option>
                    <option value="manager">@Resource.Manager</option>
                </select>
            </div>


            <form class="w3-container register-form" id="register_form_customer_by_admin" style="display:none;">
                <div class="w3-section">
                    <label><b>@Resource.Email</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="@Resource.Ph_email" id="email_form_customer_by_admin" required>
                    <label><b>@Resource.Password</b></label>
                    <input class="w3-input w3-border w3-margin-bottom password" type="password" placeholder="@Resource.Ph_password" id="psw_form_customer_by_admin" required>
                    <label><b>@Resource.Password_confirm</b></label>
                    <input class="w3-input w3-border w3-margin-bottom password-confirm" type="password" placeholder="@Resource.Ph_password_confirm" id="psw_confirm_form_customer_by_admin" required onchange="compare_password(this)">
                    <label><b>@Resource.FirstName</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="@Resource.Ph_firstname" id="firstname_form_customer_by_admin" required>
                    <label><b>@Resource.LastName</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="@Resource.Ph_lastName" id="lastname_form_customer_by_admin" required>
                    <label><b>@Resource.Patronymic</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="@Resource.Ph_patronymic" id="patronymic_form_customer_by_admin">
                    <label><b>@Resource.Date_of_birth</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="@Resource.Ph_date_of_birth" id="dateofbirth_form_customer_by_admin" required>
                    <label><b>@Resource.Gender</b></label>
                    <select id="customer_selected_gender_register_form" class="w3-input w3-border w3-margin-bottom">
                        <option value="" hidden>@Resource.Ph_gender</option>
                        <option>Мужчина</option>
                        <option>Женщина</option>
                    </select>
                    <label><b>@Resource.Growth</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" type="number" placeholder="@Resource.Ph_growth" id="growth_form_customer_by_admin">
                    <label><b>@Resource.Weight</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" type="number" placeholder="@Resource.Ph_weight" id="weight_form_customer_by_admin">
                    <label><b>@Resource.Address</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="@Resource.Ph_Address" id="address_form_customer_by_admin">
                    <label><b>@Resource.Phone</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="@Resource.Ph_Phone" id="phone_form_customer_by_admin">
                    <button class="w3-button w3-block w3-theme w3-section w3-padding" type="submit" id="btn_register_customer_by_admin">@Resource.Btn_register</button>
                </div>
            </form>

            <form class="w3-container register-form" id="register_form_coach_by_admin" style="display:none;">
                <div class="w3-section">
                    <label><b>@Resource.Email</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="@Resource.Ph_email" id="email_form_coach_by_admin" required>
                    <label><b>@Resource.Password</b></label>
                    <input class="w3-input w3-border w3-margin-bottom password" type="password" placeholder="@Resource.Ph_password" id="psw_form_coach_by_admin" required>
                    <label><b>@Resource.Password_confirm</b></label>
                    <input class="w3-input w3-border w3-margin-bottom password-confirm" type="password" placeholder="@Resource.Ph_password_confirm" id="psw_confirm_form_coach_by_admin" required onchange="compare_password(this)">
                    <label><b>@Resource.FirstName</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="@Resource.Ph_firstname" id="firstname_form_coach_by_admin" required>
                    <label><b>@Resource.LastName</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="@Resource.Ph_lastName" id="lastname_form_coach_by_admin" required>
                    <label><b>@Resource.Patronymic</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="@Resource.Ph_patronymic" id="patronymic_form_coach_by_admin">
                    <label><b>@Resource.Date_of_birth</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="@Resource.Ph_date_of_birth" id="dateofbirth_form_coach_by_admin" required>
                    <label><b>@Resource.Gender</b></label>
                    <select id="coach_selected_gender" class="w3-input w3-border w3-margin-bottom">
                        <option value="" hidden>@Resource.Ph_gender</option>
                        <option>Мужчина</option>
                        <option>Женщина</option>
                    </select>
                    <label><b>@Resource.Address</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="@Resource.Ph_Address" id="address_form_coach_by_admin">
                    <label><b>@Resource.Phone</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="@Resource.Ph_Phone" id="phone_form_coach_by_admin">
                    <button class="w3-button w3-block w3-theme w3-section w3-padding" type="submit" id="btn_register_coach_by_admin">@Resource.Btn_register</button>
                </div>
            </form>

            <form class="w3-container register-form" id="register_form_manager_by_admin" style="display:none;">
                <div class="w3-section">
                    <label><b>@Resource.Email</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="@Resource.Ph_email" id="email_form_manager_by_admin" required>
                    <label><b>@Resource.Password</b></label>
                    <input class="w3-input w3-border w3-margin-bottom password" type="password" placeholder="@Resource.Ph_password" id="psw_form_manager_by_admin" required>
                    <label><b>@Resource.Password_confirm</b></label>
                    <input class="w3-input w3-border w3-margin-bottom password-confirm" type="password" placeholder="@Resource.Ph_password_confirm" id="psw_confirm_form_manager_by_admin" required onchange="compare_password(this)">
                    <label><b>@Resource.FirstName</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="@Resource.Ph_firstname" id="firstname_form_manager_by_admin" required>
                    <label><b>@Resource.LastName</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="@Resource.Ph_lastName" id="lastname_form_manager_by_admin" required>
                    <label><b>@Resource.Patronymic</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="@Resource.Ph_patronymic" id="patronymic_form_manager_by_admin">
                    <label><b>@Resource.Date_of_birth</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="@Resource.Ph_date_of_birth" id="dateofbirth_form_manager_by_admin" required>
                    <label><b>@Resource.Address</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="@Resource.Ph_Address" id="address_form_manager_by_admin">
                    <label><b>@Resource.Phone</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="@Resource.Ph_Phone" id="phone_form_manager_by_admin">
                    <button class="w3-button w3-block w3-theme w3-section w3-padding" type="submit" id="btn_register_manager_by_admin">@Resource.Btn_register</button>
                </div>
            </form>
        }
        else
        {
            <form class="w3-container register-form" id="register_form">
                <div class="w3-section">
                    <label><b>@Resource.Email</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="@Resource.Ph_email" id="email" required>
                    <label><b>@Resource.Password</b></label>
                    <input class="w3-input w3-border w3-margin-bottom password" type="password" placeholder="@Resource.Ph_password" id="psw" required>
                    <label><b>@Resource.Password_confirm</b></label>
                    <input class="w3-input w3-border w3-margin-bottom password-confirm" type="password" placeholder="@Resource.Ph_password_confirm" id="psw_confirm" required onchange="compare_password(this)">
                    <label><b>@Resource.FirstName</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="@Resource.Ph_firstname" id="firstname" required>
                    <label><b>@Resource.LastName</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="@Resource.Ph_lastName" id="lastname" required>
                    <label><b>@Resource.Patronymic</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="@Resource.Ph_patronymic" id="patronymic">
                    <button class="w3-button w3-block w3-theme w3-section w3-padding" type="submit" id="register">@Resource.Btn_register</button>
                </div>
            </form>
        }
        
        <div class="w3-container w3-border-top w3-padding-16 w3-light-grey">
            <button onclick="document.getElementById('register_modal').style.display = 'none'" type="button" class="w3-button w3-red">@Resource.Btn_cancel</button>
            @if (!Request.IsAuthenticated)
            {
                <div class="w3-right">
                    <button onclick="change_to_logon_modal()" type="button" class="w3-button w3-light-grey" title="@Resource.Tt_login">@Resource.Btn_have_account</button>
                </div>
            }
        </div>

    </div>
</div>

<script>
    $(function () {
        $("#phone_form_manager_by_admin, #phone_form_coach_by_admin, #phone_form_customer_by_admin").mask("+375(99)999-99-99");
    });
</script>